@model StudentManagement.Models.StudentViewModel

<h2>Create Student</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Student.FullName"></label>
        <input asp-for="Student.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.Gender"></label>
        <select asp-for="Student.Gender" class="form-control">
            <option value="1">Male</option>
            <option value="0">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Student.DateOfBirth"></label>
        <input asp-for="Student.DateOfBirth" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Student.Hometown"></label>
        <input asp-for="Student.Hometown" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.StudentSchoolYear"></label>
        <input asp-for="Student.StudentSchoolYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Student.DepartmentId">Department</label>
        <select asp-for="Student.DepartmentId" class="form-control"
                asp-items="@(new SelectList(Model.Departments, "DepartmentId", "DepartmentName"))">
            <option value="">-- Select --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Student Photo</label>
        <input asp-for="PhotoUpload" type="file" class="form-control" />
        <span asp-validation-for="PhotoUpload" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
